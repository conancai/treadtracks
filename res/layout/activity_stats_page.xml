<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatsPage" >

    <RelativeLayout
        android:id="@+id/title_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".StatsPage" >

        <TextView
            android:id="@+id/stat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/stats_title"
            android:textSize="24sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/stat_title"
            android:background="@android:color/darker_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/this_week_title_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_div"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".StatsPage" >

        <TextView
            android:id="@+id/this_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/this_week"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/this_week"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/this_week_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/this_week"
            tools:context=".StatsPage" >

            <RelativeLayout
                android:id="@+id/this_week_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".StatsPage" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="2/14 Friday"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/lastDistanceEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lastDistanceFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/lastDistanceEdit"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@id/lastDistanceEdit"
                    android:text="Mi."
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/confirmButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignBottom="@+id/lastDistanceEdit"
                    android:layout_toLeftOf="@id/lastDistanceEdit"
                    android:background="@drawable/icon_checkmark"
                    android:onClick="confirm" />

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignBaseline="@id/confirmButton"
                    android:layout_alignBottom="@id/confirmButton"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/confirmButton"
                    android:background="@drawable/clear_icon"
                    android:onClick="reset" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/this_week_div2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/this_week_top"
                tools:context=".StatsPage" >

                <TextView
                    android:id="@+id/pace_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="Average Pace: 10:20 Mi."
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pace_time"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="Time: 33 Minutes"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/last_week_title_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/this_week_title_div"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".StatsPage" >

        <View
            android:id="@+id/top_last_week_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/last_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_last_week_line"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/last_week"
            android:textSize="20sp" />

        <View
            android:id="@+id/bottom_last_week_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/last_week"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/last_week_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_last_week_line"
            tools:context=".StatsPage" >

            <RelativeLayout
                android:id="@+id/last_week_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".StatsPage" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="2/6 Wednesday"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5 Mi"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/last_week_div2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_week_top"
                tools:context=".StatsPage" >

                <TextView
                    android:id="@+id/last_pace_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="Average Pace: 12:36 Mi."
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_pace_time"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="Time: 1 Hour 17 Minutes"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>